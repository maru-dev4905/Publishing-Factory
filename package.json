{
  "name": "wv",
  "version": "1.0.0",
  "description": "```sh npm create astro@latest -- --template basics ```",
  "main": "index.js",
  "scripts": {
    "format:css": "node scripts/format-css.js",
    "eleventy": "eleventy --config .eleventy.js",
    "eleventy:watch": "cross-env PROJECT_NAME=wv eleventy --config .eleventy.js --watch",
    "watch:js:core": "vite build --watch --config vite.config.core.mjs",
    "watch:js:custom":"vite build --watch --config vite.config.custom.mjs",
    "watch:css": "sass --watch src/scss:public/assets/css",
    "build:css": "sass --no-source-map src/scss:public/assets/css",
    "build:core": "vite build --config vite.config.core.mjs",
    "build:custom": "vite build --config vite.config.custom.mjs",
    "dev": "concurrently \"npm run watch:css\" \"npm run eleventy:watch\" \"vite\" \"npm run watch:js:core\" \"npm run watch:js:custom\"",
    "build": "npm run build:css && npm run eleventy && npm run build:core && npm run build:custom && npm run format:css",
    "docs": "cross-env PROJECT_NAME=wv npm run eleventy && vite build --mode docs",
    "preview": "vite preview --port 3000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dart-sass": "^1.25.0",
    "js-beautify": "^1.15.4",
    "sass": "^1.85.1",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^6.2.0"
  }
}

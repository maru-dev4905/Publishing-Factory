---
const {navigation} = Astro.props;
---

<header>
  <nav>
    <ul>
        {navigation ? (
            navigation.map((item) => (
                    <li>
                        {item.children ? (
                                <>
                                  <span>{item.name}</span>
                                  <ul>
                                      {item.children.map((child) => (
                                              <li><a href={child.url}>{child.name}</a></li>
                                      ))}
                                  </ul>
                                </>
                        ) : (
                                <a href={item.url}>{item.name}</a>
                        )}
                    </li>
            ))
        ) : (
                <li><a href="/">Home</a></li>
        )}
    </ul>
  </nav>
</header>
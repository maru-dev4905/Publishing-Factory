                                    <button type="button" class="wv_tab_btn pf_btn1">Tab 3</button>
                                </div>

                                <div class="wv_tab_content mt_16">
                                    <div class="wv_tab_panel fc_white1 active pf_box">Tab 1 Content</div>
                                    <div class="wv_tab_panel fc_white1 pf_box">Tab 2 Content</div>
                                    <div class="wv_tab_panel fc_white1 pf_box">Tab 3 Content</div>
                                </div>
                            </div>

                        </div>

                        <!-- 코드 -->
                        <div class="cont_wrap">
                            <div class="dp_f jtf_bet al_center ">
                                <p>HTML</p>
